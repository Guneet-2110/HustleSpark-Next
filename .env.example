# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git

# OpenRouter AI — https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Stripe — https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Google OAuth — https://console.cloud.google.com → APIs & Services → Credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# NextAuth — generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# Your deployed domain (update after Firebase App Hosting deployment)
NEXTAUTH_URL=https://YOUR_DOMAIN.com
